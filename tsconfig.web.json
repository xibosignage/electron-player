{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/preload/*.d.ts",
    "src/shared/**/*",
    "src/types/global.d.ts",
    "src/renderer/src/ConfigHandler.ts",
    "src/vite-env.d.ts"  ],
  "compilerOptions": {
    "types": ["node"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  }
}